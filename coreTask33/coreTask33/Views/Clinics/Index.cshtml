@model IEnumerable<coreTask33.Models.Clinic>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Clinic Name
            </th>
            <th>
                Clinic Image
            </th>
            <th width="40%">
                Clinic Description
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClinicName)
            </td>
            <td>
                    <img src="~/images/@item.ClinicImg" style="height:50px;width:50px"/>
            </td>
                <td>
                    
                @Html.DisplayFor(modelItem => item.ClinicDis)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ClinicId" class="btn btn-success" style="color:white;text-decoration:none">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ClinicId" class="btn btn-dark" style="color:white;text-decoration:none">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ClinicId" class="btn btn-danger" style="color:white;text-decoration:none">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
