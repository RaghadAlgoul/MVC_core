@model coreTask33.Models.Clinic

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Clinic</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Clinic Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClinicName)
        </dd>
        <dt class = "col-sm-2">
            Clinic Image
        </dt>
        <dd class = "col-sm-10">
            <img src="~/images/@Model.ClinicImg" style="height:70px;width:70px" />
        </dd>
        <dt class = "col-sm-2">
            Clinic Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClinicDis)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ClinicId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
